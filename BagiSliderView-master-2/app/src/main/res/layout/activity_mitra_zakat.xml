<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE6D8"
    android:orientation="vertical"
    tools:context=".mitra_zakat"
    android:weightSum="10">

    <LinearLayout
        android:background="@drawable/header_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:padding="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBack"
            android:background="@drawable/arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtHeader"
            android:gravity="center"
            android:text="Mitra Pengelola Zakat"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical">
        <Button
            android:id="@+id/mpz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dompet Dhuafa"
            android:drawableRight="@drawable/ic_action_right"
            android:drawableLeft="@drawable/icon_mpz_dd"
            android:drawablePadding="10dp"
            android:onClick="goToDompet"
            android:background="@android:color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>
        <Button
            android:id="@+id/mpzYht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yayasan Hasanah Titik"
            android:drawableLeft="@drawable/icon_mpz_yth"
            android:drawablePadding="10dp"
            android:onClick="goToYht"
            android:drawableRight="@drawable/ic_action_right"
            android:background="@android:color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>

        <Button
            android:id="@+id/mpzPitaKuning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_action_right"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_mpz_pitakuning_new"
            android:onClick="goToPitaKuning"
            android:text="Pita Kuning Anak Indonesia" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>

        <Button
            android:id="@+id/mpzSyaakirin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_action_right"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_mpz_assyakirin"
            android:onClick="goToSyaakirin"
            android:text="YPDI Asy-Syaakirin Pondok Bambu" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>

        <Button
            android:id="@+id/mpzYmai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_action_right"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_mpz_ymai"
            android:onClick="goToYmai"
            android:text="Yayasan Masjid Al-Ikhklas YMAI" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>

        <Button
            android:id="@+id/mpzMuhajirin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_action_right"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_mpz_almuhajirin"
            android:onClick="goToMuhajirin"
            android:text="Masjid Al-Muhajirin Bahar" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff"
        android:padding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_beranda"
                android:onClick="goToBeranda"
                android:id="@+id/iconBeranda"/>
            <TextView
                android:id="@+id/txtberanda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Beranda"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_faq"
                android:onClick="goToFaq"
                android:id="@+id/iconFaq"/>
            <TextView
                android:id="@+id/txtFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="FAQ"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_profile"
                android:onClick="goToProfile"
                android:id="@+id/iconProfile"/>
            <TextView
                android:id="@+id/txtProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>